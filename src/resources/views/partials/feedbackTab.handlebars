<h4>Quản lý đánh giá</h4>

<p class="text-muted">Tổng đánh giá: {{feedbacks.length}}</p>

{{#if feedbacks.length}}
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Người dùng</th>
      <th>Ngày</th>
      <th>Đánh giá</th>
      <th>Bình luận</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    {{#each feedbacks}}
    <tr>
      <td>{{this.userName}}</td>
      <td>{{this.createdAtFormatted}}</td>
      <td>{{this.rating}}/5</td>
      <td>{{this.comment}}</td>
      <td>
        <form method="POST" action="/admin/feedbacks/{{this._id}}/delete" style="display:inline;">
          <button class="btn btn-danger btn-sm" onclick="return confirm('Xóa đánh giá này?')">Xóa</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p class="text-muted">Chưa có đánh giá nào.</p>
{{/if}}
